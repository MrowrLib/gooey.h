{
    "version": 3,
    "configurePresets": [
        {
            "name": "base",
            "generator": "Ninja",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "environment": {
                "VERBOSE": "1"
            }
        },
        {
            "name": "Android",
            "displayName": "Android",
            "description": "Build for Android",
            "inherits": ["base"],
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Android",
                "CMAKE_ANDROID_ARCH_ABI": "arm64-v8a",
                "CMAKE_ANDROID_NDK": "$env{ANDROID_NDK}",
                "CMAKE_ANDROID_STL_TYPE": "c++_static",
                "CMAKE_ANDROID_API": "26",
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_PREFIX_PATH": "$env{QTROOT}/android_arm64_v8a/lib/cmake",
                "Qt6_DIR": "$env{QTROOT}/android_arm64_v8a/lib/cmake/Qt6",
                "Qt6Core_DIR": "$env{QTROOT}/android_arm64_v8a/lib/cmake/Qt6Core",
                "Qt6Widgets_DIR": "$env{QTROOT}/android_arm64_v8a/lib/cmake/Qt6Widgets",
                "Qt6Gui_DIR": "$env{QTROOT}/android_arm64_v8a/lib/cmake/Qt6Gui"
            }
        }
    ]
}